# TimescaleDB (PostgreSQL) configuration
PGHOST=localhost
PGPORT=5432
PGDATABASE=experiments
PGUSER=admin
PGPASSWORD=
PGSSLMODE=disable

# Convenience URI (many ORMs/clients accept this)
DATABASE_URL=postgres://${PGUSER}:${PGPASSWORD}@${PGHOST}:${PGPORT}/${PGDATABASE}?sslmode=${PGSSLMODE}
# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

REDIS_URL=redis://:password@localhost:6379/0

# JWT and server configuration
JWT_SECRET=replace_with_32byte_hex_or_random
JWT_TTL=24h
PORT=8080
JWT_REFRESH_TOKEN_SECRET=
JWT_REFRESH_EXPIRATION_HOURS=


SERVER_PORT=8080
LOG_LEVEL=debug

